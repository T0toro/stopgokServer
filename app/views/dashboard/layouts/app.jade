doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    if title
      title= title
    else
      title Jsbook

    meta(name='description', content=pkg.description)

    block head
      link(href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet")
      link(rel="stylesheet", href="/css/font-awesome.min.css")
      link(rel="stylesheet", href="/css/bootstrap.min.css")
      link(rel="stylesheet", href="/css/flat-ui.min.css")
      link(rel='stylesheet', href='/css/dashboard.css')
      script(src="/js/jquery.min.js")
      script(src="/js/flat-ui.min.js")
  body
    #page
      header.header
        .navbar.navbar-inverse.navbar-collapse
          .container
            ul.nav.navbar-nav
              li
                a(href="/dashboard") Главная
              li.dropdown
                a(href="", class="dropdown-toggle", data-toggle="dropdown", role="button") Статьи
                    span.caret
                ul.dropdown-menu
                  li
                    a(href="/dashboard/articles") Все статьи
                  li
                    a(href="/dashboard/articles/create") Добавить статью
              li
                a(href="/dashboard/nav") Меню
            if (isAuthenticated)
              ul.nav.navbar-nav.navbar-right
                li
                    a(href="/logout") Выйти

      main.content-wrapper.container
        block content
